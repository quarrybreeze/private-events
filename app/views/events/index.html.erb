<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>

<% @events.each do |event|%>
  <% event_title = event.title%>
  <% event_number = event.id%>
  <h3>Event: <%= link_to event_title, event_path(event_number)%></h3>
  <p>Host: <%= event.creator.name%></p>
  <p>Where: <%= event.location%></p>
  <p>When: <%= event.when%></p><br>
<%end%>


<% if current_user %>
  <%= link_to "Create Event", new_event_path%> <br>
  <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %> <br>
<%else%>
  <%= link_to "Sign Up", new_user_registration_path %> <br>
  <%= link_to "Sign In", new_user_session_path %> <br>
<%end%>